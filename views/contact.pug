extends base.pug

block scripts 
    scripts(src="/static/index.js")

block style 
    style 
        include ../static/style.css 
        include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        hr
        form(action="/contact" ,method = "post" class="myForm")
            | Enter Your Name
            input(type="text",class="myInput",name="name",placeholder="Enter Your Name")
            | Enter Your Phone No.
            input(type="phone",class="myInput",name="phone",placeholder="Enter Your Phone No.")
            | Enter Your Email ID
            input(type="email",class="myInput",name="email",placeholder="Enter Your Email ID")
            | Enter Your Address
            input(type="text",class="myInput bigarea",name="address",placeholder="Enter Your Address")
            | Enter Your Concern
            input(type="text",class="myInput bigarea",name="desc",placeholder="Enter Your Concern")
            button(class="btn") 
                | Submit